---
const {title,description,content,techs,tag,date} = Astro.props;
---

<div class="flex flex-col border-gray-800 border-2 rounded-sm bg-slate-900">
  <div class="h-auto">
    <!-- imagen -->
    <img
      class="aspect-[2/1] w-full h-full object-cover"
      src="https://faztweb.com/_next/image?url=https%3A%2F%2Fres.cloudinary.com%2Ffazt%2Fimage%2Fupload%2Fc_scale%2Cw_380%2Fv1670029365%2Ftutorials%2Fxobsuj36soble0oigxlh.jpg&w=384&q=75"
      alt="img-1"
    />
  </div>
  <div class="flex flex-col w-full justify-between p-2 gap-4">
    <!-- al lado -->
    <div class="flex flex-col h-full justify-between">
      <!-- contenido -->
      <div class="text-xl font-bold">{title}</div>
      <div class="text-gray-200">
        {description}
      </div>
      <div class="text-gray-400">
        {content}
      </div>
    </div>
    <div class="flex justify-between items-end gap-2 w-full">
      <!-- fotter -->
      <div class="w-7 aspect-[1/1]">
        <img
          class="rounded-full w-full h-full"
          src="data:image/png;base64,"
          alt="js"
        />
      </div>
      <div
        class="flex p-1 bg-indigo-700 border-2 border-indigo-950 rounded-md justify-center items-center opacity-95"
      >
        {tag}
      </div>
      <div class="flex px-2 py-1 bg-zinc-900 rounded-md">{date}</div>
    </div>
  </div>
</div>
